{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Skaffold",
      "type": "cloudcode.kubernetes",
      "request": "launch",
      "skaffoldConfig": "${workspaceFolder}/skaffold.yaml",
      "watch": true,
      "cleanUp": false,
      "portForward": true,
      "imageRegistry": "ghcr.io/infinity-blackhole",
      "debug": [
        {
          "image": "ghcr.io/infinity-blackhole/elkia-fleet",
          "containerName": "elkia-fleet",
          "sourceFileMap": {
            "${workspaceFolder}": "/go/src/github.com/infinity-blackhole/elkia"
          }
        },
        {
          "image": "ghcr.io/infinity-blackhole/elkia-gateway",
          "containerName": "elkia-gateway",
          "sourceFileMap": {
            "${workspaceFolder}": "/go/src/github.com/infinity-blackhole/elkia"
          }
        },
        {
          "image": "ghcr.io/infinity-blackhole/elkia-auth-proxy",
          "containerName": "elkia-auth-proxy",
          "sourceFileMap": {
            "${workspaceFolder}": "/go/src/github.com/infinity-blackhole/elkia"
          }
        },
        {
          "image": "ghcr.io/infinity-blackhole/elkia-gateway-proxy",
          "containerName": "elkia-gateway-proxy",
          "sourceFileMap": {
            "${workspaceFolder}": "/go/src/github.com/infinity-blackhole/elkia"
          }
        },
        {
          "image": "ghcr.io/infinity-blackhole/elkia-auth",
          "containerName": "elkia-auth",
          "sourceFileMap": {
            "${workspaceFolder}": "/go/src/github.com/infinity-blackhole/elkia"
          }
        }
      ]
    }
  ]
}
